<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="253dp"
            android:layout_height="0dp"
            tools:srcCompat="@tools:sample/avatars[0]"
            android:id="@+id/cloth_image_view"
            android:layout_marginBottom="164dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.424"
            app:layout_constraintTop_toBottomOf="@+id/wet_text_view"/>
    <TextView
            android:text="경기도 수원시"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:id="@+id/area_text_view"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/weather_image_view"
            android:layout_marginTop="102dp"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/weather_image_view"/>
    <TextView
            android:text="기온"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/temp_text_view"
            android:layout_marginTop="150dp"
            app:layout_constraintStart_toEndOf="@+id/weather_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/wet_text_view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="77dp"
            android:layout_marginRight="77dp"/>
    <TextView
            android:text="습도"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/wet_text_view"
            app:layout_constraintTop_toBottomOf="@+id/temp_text_view"
            app:layout_constraintStart_toEndOf="@+id/weather_image_view"
            android:layout_marginBottom="148dp"
            app:layout_constraintBottom_toTopOf="@+id/cloth_image_view"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            tools:srcCompat="@tools:sample/avatars[5]"
            android:id="@+id/weather_image_view"
            app:layout_constraintTop_toBottomOf="@+id/area_text_view"
            app:layout_constraintEnd_toStartOf="@+id/temp_text_view"
            android:layout_marginBottom="85dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="67dp"
            android:layout_marginStart="67dp"/>
    <TextView
            android:textStyle="bold"
            android:text="오늘은 무엇을 입을까요?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            app:layout_constraintStart_toStartOf="@+id/cloth_image_view"
            android:layout_marginLeft="21dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="21dp"
            app:layout_constraintTop_toBottomOf="@+id/weather_image_view"
            android:layout_marginBottom="356dp"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="갱신"
            android:id="@+id/new_button"
            app:layout_constraintRight_toStartOf="@+id/wet_text_view"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cloth_image_view"
            android:layout_marginBottom="60dp"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="147dp" android:layout_marginStart="147dp"/>
    <TextView
            android:text="날짜"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginEnd="35dp" android:layout_marginRight="35dp"
            android:layout_marginBottom="12dp" app:layout_constraintEnd_toEndOf="@+id/weather_image_view"
            app:layout_constraintBottom_toTopOf="@+id/weather_image_view"/>

</android.support.constraint.ConstraintLayout>